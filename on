[32m+[m[32m  try {[m
[32m+[m[32m    const [result] = await pool.query([m
[32m+[m[32m      'INSERT INTO posts (titulo, descripcion, categoria, autor_id) VALUES (?, ?, ?, ?)',[m
[32m+[m[32m      [titulo, descripcion, categoria, autor_id][m
[32m+[m[32m    );[m
[32m+[m[41m   [m
[32m+[m[32m    const [rows] = await pool.query([m
[32m+[m[32m      `SELECT p.*, a.id as autor_id, a.nombre as autor_nombre, a.email as autor_email, a.imagen as autor_imagen[m
[32m+[m[32m       FROM posts p[m
[32m+[m[32m       LEFT JOIN autores a ON p.autor_id = a.id[m
[32m+[m[32m       WHERE p.id = ?`,[m
[32m+[m[32m      [result.insertId][m
[32m+[m[32m    );[m
[32m+[m[32m    res.status(201).json(rows[0]);[m
[32m+[m[32m  } catch (err) {[m
[32m+[m[32m    console.error(err);[m
[32m+[m[32m    res.status(500).json({ error: 'Error creando post' });[m
[32m+[m[32m  }[m
