[32m+[m[32mconst pool = require('../db');[m
[32m+[m
[32m+[m[32mexports.createAuthor = async (req, res) => {[m
[32m+[m[32m  const { nombre, email, imagen } = req.body;[m
[32m+[m[32m  try {[m
[32m+[m[32m    const [result] = await pool.query([m
[32m+[m[32m      'INSERT INTO autores (nombre, email, imagen) VALUES (?, ?, ?)',[m
[32m+[m[32m      [nombre, email, imagen][m
[32m+[m[32m    );[m
[32m+[m[32m    const [rows] = await pool.query('SELECT * FROM autores WHERE id = ?', [result.insertId]);[m
[32m+[m[32m    res.status(201).json(rows[0]);[m
[32m+[m[32m  } catch (err) {[m
[32m+[m[32m    console.error(err);[m
[32m+[m[32m    res.status(500).json({ error: 'Error creando autor' });[m
[32m+[m[32m  }[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexports.getAllAuthors = async (req, res) => {[m
[32m+[m[32m  try {[m
[32m+[m[32m    const [rows] = await pool.query('SELECT * FROM autores');[m
[32m+[m[32m    res.json(rows);[m
[32m+[m[32m  } catch (err) {[m
[32m+[m[32m    console.error(err);[m
[32m+[m[32m    res.status(500).json({ error: 'Error al obtener autores' });[m
[32m+[m[32m  }[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexports.getAuthorById = async (req, res) => {[m
[32m+[m[32m  const { id } = req.params;[m
[32m+[m[32m  try {[m
[32m+[m[32m    const [rows] = await pool.query('SELECT * FROM autores WHERE id = ?', [id]);[m
[32m+[m[32m    if (!rows.length) return res.status(404).json({ error: 'Autor no encontrado' });[m
[32m+[m[32m    res.json(rows[0]);[m
[32m+[m[32m  } catch (err) {[m
[32m+[m[32m    console.error(err);[m
[32m+[m[32m    res.status(500).json({ error: 'Error al obtener autor' });[m
[32m+[m[32m  }[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexports.getPostsByAuthor = async (req, res) => {[m
[32m+[m[32m  const { id } = req.params;[m
[32m+[m[32m  try {[m
[32m+[m[32m    const [posts] = await pool.query([m
[32m+[m[32m      `SELECT p.*, a.id as autor_id, a.nombre as autor_nombre, a.email as autor_email, a.imagen as autor_imagen[m
[32m+[m[32m       FROM posts p[m
[32m+[m[32m       LEFT JOIN autores a ON p.autor_id = a.id[m
[32m+[m[32m       WHERE p.autor_id = ?`,[m
[32m+[m[32m      [id][m
[32m+[m[32m    );[m
[32m+[m[32m    res.json(posts);[m
[32m+[m[32m  } catch (err) {[m
[32m+[m[32m    console.error(err);[m
[32m+[m[32m    res.status(500).json({ error: 'Error al obtener posts del autor' });[m
[32m+[m[32m  }[m
[32m+[m[32m};[m
